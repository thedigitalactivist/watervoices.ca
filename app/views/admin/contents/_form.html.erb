<div class="editable-content editable-text <%= 'single-line' if type == :text_field %>" id="content-<%= content.id %>">
  <div class="pull-right">
    <%= link_to 'Edit', '#', :class => "btn btn-tiny edit-btn" %>
    <%= link_to 'Cancel Edit', '#', :class => "btn btn-tiny cancel-edit-btn", :style => "display:none" %>
    <%= link_to 'Save', '#', :class => "save-btn btn btn-primary btn-tiny", :style => "display:none" %>
  </div>
  <div class="pull-left">
    <h3><%= title.present? ? title : content.key.humanize %></h3>
  </div>
  <div class="clear"></div>

  <div class="edit-mode hide">
    <%= simple_form_for [:admin, content], :html => {:class => "form-horizontal"} do |f| %>
      <% if type == :text_field %>
        <%= f.text_field :body %>
      <% else %>
        <%= f.text_area :body, :rows => 5 %>
      <% end %>
      <%= f.input :key, :as => :hidden if content.new_record? %>
    <% end %>
  </div>
  <div class="preview-mode"><%= m(content.body.to_s) %></div>
</div>
