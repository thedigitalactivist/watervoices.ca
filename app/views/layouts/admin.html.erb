<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>WATER VOICES ADMIN - <%= yield :title %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <!-- Le styles -->
    <%= stylesheet_link_tag    "admin/admin" %>
    <style type="text/css">
      body {
        padding-top: 60px;
      }
    </style>

    <!-- Le fav and touch icons -->
    <link href="/favicon.ico" rel="shortcut icon">
    <%= yield :head  %>
  </head>

  <body>

    <%= render 'admin/base/topbar' %>

    <div class="container">
      <div class="content">
        <%= yield(:crumbs) %>

        <% page_name = yield :page_name %>
        <% if page_name.present? %>
          <% page_desc = yield :page_desc %>
          <div class="page-header">
            <div class="pull-right">
              <%= yield :title_right %>
            </div>
            <div class="pull-left">
              <h1>
                <%= page_name  %>
                <small><%= page_desc %></small>
              </h1>
            </div>
            <div class="clear"></div>
          </div>
        <% end %>

        <%= render 'admin/base/flash', :flash => flash %>

        <% actions = yield(:actions) %>
        <% filters = yield(:filters) %>

        <% if actions.present? || filters.present? %>
          <div class="well">
            <div class="pull-right">
              <%= actions %>
              <%#= link_to('<i class="icon-home icon-white"></i> Dashboard'.html_safe, [:my, :dashboard], :class => "btn btn-small btn-info" ) %>
            </div>
            <div class="pull-left">
              <%= filters %>
            </div>
            <div class="clear"></div>
          </div>
        <% end %>

        <%= yield %>
      </div>

      <hr/>
      <%= render 'admin/base/footer' %>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "admin/admin" %>

    <%= yield :end_of_body %>

  </body>
</html>
