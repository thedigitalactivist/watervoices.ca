    //returns html for a top level button
      function addButton(strName, strID) {
        var tH = [];
        
        tH.push("<div class='but1' onclick=\"loadSection('"+strName+"', '"+strID+"', false)\">");
          tH.push("<div class='but1 over' style='display:none;'>");
          
          tH.push("</div>");
          tH.push("<div class='but1 down' style='display:none;'>");
          
          tH.push("</div>");
          
          tH.push("<div class='but1text'>"+strName+"</div>");
          tH.push("<div class='but1icon' style=\"background-image:url('/assets/icon-"+String(strName).toLowerCase()+".png')\"></div>");
        tH.push("</div>");
        
        return tH.join("");
      }
      
      var crumbString = "";
